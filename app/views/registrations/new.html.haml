= javascript_include_tag "validation"
-# = javascript_include_tag 'vendor/jquery.ghostInput'

= javascript_tag "Diaspora.Page = 'InvitationsEdit';"
.span-7.append-1.prepend-3
  %br
  %br
  %br
  %br
  %h1
    = t('welcome')
  %h3.accept_invitation_text
    = t('.sign_up_message')
  - flash.each do |name, msg|
    %p{:class => "login_#{name}"}= msg

  = image_tag 'screenshot.png', :style => "margin-left:-50px;"

.span-10
  %br
  %br
  %br
  %br
  = form_for(resource, :as => resource_name, :html => {:class => 'new_user_form'}, :url => registration_path(resource_name), :validate => true) do |f|
    %fieldset
      .clearfix
        %b
          = t('username')
        = f.text_field :username, :style => "-webkit-border-radius: 1em; -moz-border-radius: 1em; border-radius: 1em; -webkit-box-shadow:0 1px 2px rgba(0,0,0,0.5); -moz-box-shadow:0 1px 2px rgba(0,0,0,0.5); box-shadow:0 1px 2px rgba(0,0,0,0.5);", :title => t('registrations.new.enter_username')
        %span.host_uri
          = "@#{AppConfig[:pod_uri].host}"
      .clearfix
        %b
          = t('email')
        = f.email_field :email, :style => "-webkit-border-radius: 1em; -moz-border-radius: 1em; border-radius: 1em; -webkit-box-shadow:0 1px 2px rgba(0,0,0,0.5); -moz-box-shadow:0 1px 2px rgba(0,0,0,0.5); box-shadow:0 1px 2px rgba(0,0,0,0.5);", :title => t('registrations.new.enter_email')
      .clearfix
        %b
          = t('password')
        = f.password_field :password, :style => "-webkit-border-radius: 1em; -moz-border-radius: 1em; border-radius: 1em; -webkit-box-shadow:0 1px 2px rgba(0,0,0,0.5); -moz-box-shadow:0 1px 2px rgba(0,0,0,0.5); box-shadow:0 1px 2px rgba(0,0,0,0.5);", :title => t('registrations.new.enter_password') 
      .clearfix
        %b
          = t('password_confirmation')
        = f.password_field :password_confirmation, :style => "-webkit-border-radius: 1em; -moz-border-radius: 1em; border-radius: 1em; -webkit-box-shadow:0 1px 2px rgba(0,0,0,0.5); -moz-box-shadow:0 1px 2px rgba(0,0,0,0.5); box-shadow:0 1px 2px rgba(0,0,0,0.5);", :title => t('registrations.new.enter_password_again') 

      .submit_field
        = f.submit t('registrations.new.create_my_account'), :class => 'in_aspects'


